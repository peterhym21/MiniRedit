@page "{id:int}"
@model MiniRedit.Pages.Posts.EditPostsModel
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit Posts</h1>
            @*<div class=" text-right">
                @if (Model.User.UserName != null)
                {
                    <p class="textstyle">Du er logget ind som:</p>
                    @Model.User.UserName
                }
            </div>*@
            <br />
            <br />
        </div>
    </div>
    <br />
    <div class="col-lg-12">
        <form method="post" asp-route="@Model.Post.PostId">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p class="textstyle">Insert New Title: </p>
                            <div class="input-group">
                                <input type="text" class="form-control"
                                       placeholder="@Model.Post.Title" asp-for="PostEdit.Title" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p class="textstyle">Insert New Content: </p>
                            <div class="input-group">
                                <input type="text" class="form-control"
                                       placeholder="@Model.Post.Content" asp-for="PostEdit.Content" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p class="textstyle">Insert Board Title: </p>
                            <div class="input-group">
                                <label>@Model.Board.Title</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div>
                        <button type="submit" class="btn btn-info">Save Message</button>
                        <br />
                    </div>
                </div>
            </div>
        </form>

        <br />
        <a asp-page="../Index" class="btn btn-primary"><i class="btn text-white">Back To Home</i></a>
    </div>
</div>
