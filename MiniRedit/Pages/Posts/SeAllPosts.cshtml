@page
@model MiniRedit.Pages.Posts.SeAllPostsModel
<div class="container">
    <div class="col-lg-12">
        <h1>All Posts that is uploaded</h1>
    </div>
    <br />
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                @if (Model.Posts != null)
                {
                    <table class="table table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Board</th>
                        </tr>
                        @foreach (var posts in Model.Posts)
                        {
                            <tr>
                                <td>@posts.Title</td>
                                <td>@posts.Content</td>
                                @foreach (var boards in Model.Boards)
                                {
                                    @if (posts.BoardId == boards.BoardId)
                                    {
                                        <td>@boards.Title</td>
                                    }}
                                <td>
                                    <a asp-page="/Posts/EditPosts" asp-route-id=@posts.PostId>Edit</a> |
                                    <a asp-page="/Posts/Postdetails" asp-route-id=@posts.PostId>Details</a>
                                </td>

                            </tr>
                        }
                    </table>}
            </div>
        </div>
    </div>
</div>
