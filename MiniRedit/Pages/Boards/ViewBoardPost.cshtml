@page "{SelectedId:int?}"
@model MiniRedit.Pages.Boards.ViewBoardPostModel

<div class="container text-center">
    <div class="col-lg-12">
        <h1>Welcome To Board:</h1>
        <h2>@Model.Boards.Title</h2>
    </div>
    <br />
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                @if (Model.Posts != null)
                {
                    <table class="table table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                        </tr>
                        @foreach (var posts in Model.Posts)
                        {
                            <tr>
                                <td>@posts.Title</td>
                                <td>@posts.Content </td>
                                <td>
                                    <a asp-page="/Edit/EditMessage" asp-route-id=@posts.PostId>Edit</a> |
                                    <a asp-page="/Details/DetaileMessages" asp-route-id=@posts.PostId>Details</a> |
                                    <a asp-page="/Delete/DeleteMessage" asp-route-id=@posts.PostId>Delete</a>
                                </td>
                            </tr>
                        }
                    </table>}
            </div>
        </div>
    </div>
</div>
