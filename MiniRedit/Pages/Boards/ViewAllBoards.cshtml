@page
@model MiniRedit.Pages.Boards.ViewAllBoardsModel
<div class="container">
    <div class="col-lg-12">
        <h1>All Posts that is uploaded</h1>
    </div>
    <br />
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-dark">
                    <tr>
                        <th>Board Title</th>
                        <th>BoardId</th>
                    </tr>
                    @foreach (var boards in Model.Boards)
                    {
                        <tr>

                            <td>@boards.Title</td>
                            <td>
                                <a asp-page="" asp-route-id=@boards.BoardId>Edit</a> |
                                <a asp-page="BoardDetails" asp-route-id=@boards.BoardId>Details</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
