@page
@model MiniRedit.Pages.Users.LoginModel
<div class="container text-center">
    <div class="row">
        <div class="col-lg-12">
            <h1>Login</h1>
            <br />
            <br />
        </div>
    </div>

    <div class="col-lg-12">
        <form method="post">
            <div class="row" asp-validation-summary="All">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="form-group">
                            <p class="textstyle">Type your Username: </p>
                            <div class="input-group">
                                <input type="text" class="form-control"
                                       asp-for="Username" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <p class="textstyle">Type your Password: </p>
                        <div class="input-group">
                            <input type="password" class="form-control"
                                   asp-for="Password" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div>
                        <br />
                        <p> </p>
                        <button type="submit" class="btn btn-info">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-12">
        <form method="post" asp-page-handler="Create">
            <div class="row" asp-validation-summary="All">
                <div class="col-lg-12">
                    <div>
                        <br />
                        <button type="submit" class="btn btn-info">Create a User</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
